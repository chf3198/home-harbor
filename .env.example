# HomeHarbor Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to Git!

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
PORT=3000
API_PORT=4000

# ============================================
# AWS Configuration
# ============================================
# DO NOT put actual AWS credentials here!
# Use AWS CLI configuration or IAM roles instead
AWS_REGION=us-east-2
AWS_ACCOUNT_ID=your-account-id-here

# For local development only (prefer IAM roles in production)
# AWS_ACCESS_KEY_ID=your-access-key-here
# AWS_SECRET_ACCESS_KEY=your-secret-key-here

# ============================================
# Database Configuration
# ============================================
# Local development
DATABASE_URL=postgresql://localhost:5432/homeharbor_dev
# Production (use AWS Secrets Manager or Parameter Store)
# DATABASE_URL=postgresql://user:password@your-rds-endpoint.us-east-2.rds.amazonaws.com:5432/homeharbor

# ============================================
# Redis/Cache Configuration
# ============================================
REDIS_URL=redis://localhost:6379
# Production
# REDIS_URL=redis://your-elasticache-endpoint:6379

# ============================================
# API Keys (use AWS Secrets Manager in production)
# ============================================
# API_KEY=your-api-key-here
# OPENAI_API_KEY=your-openai-key-here
# MAPBOX_API_KEY=your-mapbox-key-here

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:4000/graphql

# ============================================
# Session & Authentication
# ============================================
SESSION_SECRET=change-this-to-a-random-string
JWT_SECRET=change-this-to-another-random-string
JWT_EXPIRES_IN=7d

# ============================================
# Feature Flags
# ============================================
ENABLE_AI_SEARCH=true
ENABLE_RECOMMENDATIONS=true
ENABLE_ANALYTICS=true

# ============================================
# Observability
# ============================================
LOG_LEVEL=debug
# SENTRY_DSN=your-sentry-dsn-here
# DATADOG_API_KEY=your-datadog-key-here

# ============================================
# S3 Buckets
# ============================================
S3_BUCKET_IMAGES=homeharbor-images-dev
S3_BUCKET_DATA=homeharbor-data-dev

# ============================================
# Testing
# ============================================
TEST_DATABASE_URL=postgresql://localhost:5432/homeharbor_test
