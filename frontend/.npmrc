# pnpm configuration for exFAT filesystem compatibility
# exFAT does not support symlinks, so we use hoisted node_modules

# Use hoisted node_modules (flat structure without symlinks)
node-linker=hoisted

# Disable symlinks entirely
symlink=false

# Use shell scripts instead of symlinks for bin executables
prefer-symlinked-executables=false

# Copy packages instead of linking (needed for cross-filesystem)
package-import-method=copy

# Store on local ext4 filesystem for better performance  
store-dir=/tmp/pnpm-store

# Allow all build scripts (needed for esbuild, msw, etc.)
# This is safe for development - esbuild needs its postinstall to work
ignore-scripts=false
